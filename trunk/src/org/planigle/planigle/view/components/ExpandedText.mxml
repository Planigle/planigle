<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:component="org.planigle.planigle.view.components.*" width="600" height="440">
	<mx:Script>
		<![CDATA[
			// Enter text.  When done, call the function specified by
			// the doneFunction variable and pass the text as a String.
			import mx.managers.PopUpManager;
			
			private var doneFunction:Function;
			private var cancelFunction:Function;

			// Initialize the dialog.
			public function init(initialText:String, doneFunction:Function, cancelFunction:Function): void
			{
				entryField.text = initialText;
				this.doneFunction = doneFunction;
				this.cancelFunction = cancelFunction;	
				entryField.setFocus();
			}
						
			// Select the specified items.
			private function enterText(event:Event):void
			{
				var text:String = entryField.text;
				PopUpManager.removePopUp(this);
				if (doneFunction != null)
					doneFunction(text);
			}
						
			// Cancel.
			private function cancel(event:Event):void
			{
				PopUpManager.removePopUp(this);
				if (cancelFunction != null)
					cancelFunction();
			}
		]]>
	</mx:Script>
	<mx:Form width="100%" height="100%" paddingTop="0" paddingLeft="0" paddingRight="0" paddingBottom="0">
		<component:HTMLTextArea id='entryField' height="100%" width="100%"/>
		<mx:HBox y="270" width="100%" horizontalAlign="center">
			<mx:Button id="acceptText" label="OK" click="enterText(event)"/>
			<mx:Button label="Cancel" click="cancel(event)"/>
		</mx:HBox>	
	</mx:Form>
</mx:TitleWindow>