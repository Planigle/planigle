<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="400">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var stories:ArrayCollection = new ArrayCollection();
		]]>
	</mx:Script>
	<mx:DataGrid id="data_grid" width="100%" height="265" dataProvider="{stories}" allowMultipleSelection="true">
		<mx:columns>
			<mx:DataGridColumn headerText="Name" dataField="name"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:HBox y="270" width="100%" horizontalAlign="center">
		<mx:Button id="btn_ok" label="OK" click="PopUpManager.removePopUp(this)"/>
		<mx:Button label="Cancel" click="PopUpManager.removePopUp(this)"/>
	</mx:HBox>	
</mx:TitleWindow>