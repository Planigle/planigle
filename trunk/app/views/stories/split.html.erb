<div class="active-scaffold">
  <div class="update-view view">
	<% url_options = params_for(:action => :split) -%>
	<%=
	if request.xhr?
	  form_remote_tag :url => url_options,
	                  :after => "$('#{loading_indicator_id(:action => :split, :id => params[:id])}').style.visibility = 'visible'; Form.disable('#{element_form_id(:action => :split)}');",
	                  :complete => "$('#{loading_indicator_id(:action => :split, :id => params[:id])}').style.visibility = 'hidden'; Form.enable('#{element_form_id(:action => :split)}');",
	                  :failure => "ActiveScaffold.report_500_response('#{active_scaffold_id}')",
	                  :html => {
	                    :href => url_for(url_options),
	                    :id => element_form_id(:action => :split),
	                    :class => 'split',
	                    :method => :put
	                  }
	else
	  form_tag url_options,
	           :id => element_form_id(:action => :split),
	           :class => 'split',
	           :method => :put
	end
	%>
	
  <h4><%= @old.to_label.nil? ? active_scaffold_config.update.label : as_('Split %s', clean_column_value(@old.to_label)) %></h4>

  <% if request.xhr? -%>
    <div id="<%= element_messages_id(:action => :split) %>" class="messages-container"><%= error_messages_for :record %></div>
  <% else -%>
    <%= render :partial => 'form_messages' %>
  <% end -%>

  <%= render :partial => 'form', :locals => { :columns => active_scaffold_config.update.columns } %>
	
	<p class="form-footer">
	    <%= submit_tag as_('Split'), :class => "submit" %>
	    <%= link_to as_('Cancel'), params_for(:action => 'list'), :class => 'cancel' %>
	    <%= loading_indicator_tag(:action => :split, :id => params[:id]) %>
	  </p>
	
	</form>
	<script type="text/javascript">
	Form.focusFirstElement('<%= element_form_id(:action => :split) -%>');
	</script>
  </div>
</div>